<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="100dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/my_secondary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/TVcaseStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Active Case"
            android:background="@color/my_primary"
            android:textAlignment="center"
            android:textSize="23dp"
            android:padding="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVcaseStatus"
            android:id="@+id/TVactiveCaseStatus"
            android:text="Status : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/dark_grey">
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayoutClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/TVactiveCaseStatus"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical = "true"
                android:id="@+id/img1" />

            <TextView
                android:id="@+id/clientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wong Huan Huan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_gravity="center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/caseNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayoutClient">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/caseNameLabel"
                android:text="Case Name: "
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/caseName"
                android:text="Case one"
                android:textStyle="normal"
                android:textSize="20dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/caseTypeLayout"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caseNameLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Type: "
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/caseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criminal"
                android:textStyle="normal"
                android:textSize="20dp"
                android:textColor="@color/black">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clickableText"
            android:text="View Details"
            android:textStyle="bold"
            android:textColor="@color/darkPurple"
            android:textSize="20dp"
            android:clickable="true"
            android:onClick="onViewDetailsClick"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@+id/caseTypeLayout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailsLayout"
            android:layout_below="@+id/clickableText"
            android:paddingHorizontal="15dp"
            android:layout_marginVertical="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Chat now"
                android:id="@+id/btnChatClient"
                android:textColor="@color/white">
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Update Case"
                android:id="@+id/btnUpdateCase"
                android:textColor="@color/white"
                >
            </Button>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>