<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Rejection Reason"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorPrimary" />

    <RadioGroup
        android:id="@+id/radioGroupReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioNotSuitableExpertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not suitable expertise" />

        <RadioButton
            android:id="@+id/radioConflictOfInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conflict of interest" />

        <RadioButton
            android:id="@+id/radioOtherReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other reasons" />

    </RadioGroup>

    <EditText
        android:id="@+id/etCustomReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Specify other reason"
        android:visibility="gone" />

</LinearLayout>