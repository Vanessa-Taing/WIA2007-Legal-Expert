<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@color/lightPurple" />
        </shape>
    </item>

    <item
        android:right="0dp"
        android:left="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->/>
            <stroke
                android:width="2.5dp"
            android:color="@color/my_primary" /> <!-- Specify the color of the outline -->
        </shape>
    </item>
</layer-list>