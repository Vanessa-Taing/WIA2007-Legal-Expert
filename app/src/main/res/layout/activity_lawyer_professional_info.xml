<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lawyerProfessional_Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--purple color Professional Information part-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#8C7AF4">

            <TextView
                android:id="@+id/TVProfessionalInfo"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Professional Information"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>

        <!--white color info part-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <!--bar number-->
            <TextView
                android:id="@+id/TVBarNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar Number"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/ETBarNumber"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_below="@id/TVBarNumber"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:background="@color/material_dynamic_neutral95"
                android:textColor="@android:color/black"
                android:hint=" 12345678"/>

            <!--Law Firm-->
            <TextView
                android:id="@+id/TVLawFirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Law Firm"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_below="@id/ETBarNumber"
                android:textColor="@android:color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TILLawFirm"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/TVLawFirm">

                <AutoCompleteTextView
                    android:id="@+id/ACTVLawFirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/material_dynamic_neutral95"
                    android:hint="Select Your Law Firm"
                    android:textColor="@color/black"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Legal Specializations-->
            <TextView
                android:id="@+id/TVSpecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legal Specializations"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_below="@id/TILLawFirm"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TILSpecialization"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/TVSpecialization">

                <AutoCompleteTextView
                    android:id="@+id/ACTVSpecialization"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/material_dynamic_neutral95"
                    android:hint="Select Your Specialization"
                    android:textColor="@color/black"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Years of Experience -->
            <TextView
                android:id="@+id/TVExpYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Years of Experience"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_below="@id/TILSpecialization"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/ETExpYear"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_below="@id/TVExpYear"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:background="@color/material_dynamic_neutral95"
                android:textColor="@android:color/black"
                android:hint=" 5" />

            <!--Qualification -->
            <TextView
                android:id="@+id/TVQualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_below="@id/ETExpYear"
                android:textColor="@android:color/black"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TILQualification"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="350dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/TVQualification">

                <AutoCompleteTextView
                    android:id="@+id/ACTVQualification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/material_dynamic_neutral95"
                    android:hint="Select"
                    android:textColor="@color/black"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLawyerSubmit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_below="@id/TILQualification"
                android:layout_marginStart="150dp"
                android:backgroundTint="@color/my_primary"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnLawyerBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TILQualification"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:backgroundTint="#2087D8"
                android:text="Back" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:elevation="10dp"
                android:visibility="gone"
                />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

