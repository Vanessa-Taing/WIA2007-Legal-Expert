<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_primary">

            <TextView
                android:id="@+id/toolbartxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_toolbar"
        android:background="@color/off_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <!--Profile Picture-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_profile_dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:src="@drawable/mad_cat"
                android:layout_marginBottom="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="James Kim"
                android:textColor="@android:color/black"
                android:layout_marginStart="140dp"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/TVLawyerName"/>

            <TextView
                android:id="@+id/TVSpecialise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialise in Family Law"
                android:textSize="15sp"
                android:layout_below="@id/TVLawyerName"
                android:layout_marginStart="145dp"
                android:textColor="#6A6969"/>

            <View
                android:id="@+id/divider_profile"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/imageView_profile_dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black" />

            <!--show Setting-->
            <ImageView
                android:id="@+id/IVSetting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/divider_profile"
                android:background="@drawable/baseline_settings_24" />

            <Button
                android:id="@+id/btnSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_profile"
                android:layout_marginStart="80dp"
                android:backgroundTint="@color/my_primary"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Setting"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/TV_settingInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSetting"
                android:layout_marginStart="80dp"
                android:text="Edit Name, Password, Email, Phone"
                android:textSize="12sp" />

            <View
                android:id="@+id/divider_setting"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/btnSetting"
                android:layout_marginTop="25dp"
                android:background="@color/black" />

            <!--show Schedule-->
            <ImageView
                android:id="@+id/IVSchedule"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/divider_setting"
                android:layout_marginTop="20dp"
                android:background="@drawable/baseline_calendar_month_24" />

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_setting"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Schedule"
                android:textSize="25sp"
                android:backgroundTint="@color/my_primary"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/TV_ScheduleInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSchedule"
                android:layout_marginStart="80dp"
                android:text="Upcoming schedule, Cancelled schedule"
                android:textSize="12sp" />

            <View
                android:id="@+id/divider_Schedule"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/TV_ScheduleInstruction"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <!--show Rating-->
            <ImageView
                android:id="@+id/IVYourRating"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/divider_Schedule"
                android:layout_marginTop="20dp"
                android:background="@drawable/baseline_ic_rate"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>

            <Button
                android:id="@+id/btnYourRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_Schedule"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp"
                android:text="Your Rating"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="25sp"
                android:backgroundTint="@color/my_primary"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/TV_YourRatingInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnYourRating"
                android:layout_marginStart="80dp"
                android:text="Click to View Rating"
                android:textSize="12sp" />

            <View
                android:id="@+id/divider_YourRating"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/TV_YourRatingInstruction"
                android:layout_marginTop="8dp"
                android:background="@color/black" />


            <!--show Case History-->
            <ImageView
                android:id="@+id/IVCaseHistory"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/divider_YourRating"
                android:layout_marginTop="20dp"
                android:background="@drawable/baseline_help_center_24" />

            <Button
                android:id="@+id/btnCaseHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_YourRating"
                android:layout_marginStart="80dp"
                android:layout_marginTop="15dp"
                android:text="Case History"
                android:textSize="25sp"
                android:backgroundTint="@color/my_primary"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/TV_CaseHistoryInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnCaseHistory"
                android:layout_marginStart="80dp"
                android:text="Click to read case history"
                android:textSize="12sp" />

            <View
                android:id="@+id/divider_Support"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/TV_CaseHistoryInstruction"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_Support"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="70dp"
                android:backgroundTint="@color/my_primary"
                android:text="Log Out"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="25sp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                app:itemIconTint="@drawable/menu_item_color_selector"
                app:itemTextColor="@drawable/menu_item_color_selector"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/lawyer_bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>