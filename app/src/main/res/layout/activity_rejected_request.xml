<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RejectedRequest">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your request for this Case is Rejected."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject by: "
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lawyer 1"
            android:layout_marginLeft="6dp"
            android:id="@+id/rejectName"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for Rejection:"
            android:textSize="16sp"
            android:paddingTop="8dp"/>


        <TextView
            android:id="@+id/TVrejectionReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provide a clear explanation of the rejection reason."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click the button to reselect your lawyer to handle the case."
            android:textColor="@color/black"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnReselectLawyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select another Lawyer"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
        </Button>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>