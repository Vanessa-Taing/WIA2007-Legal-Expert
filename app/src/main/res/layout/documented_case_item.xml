<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutLabel"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/document_icon"
                android:layout_gravity="center">
            </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titletxt"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/darkPurple"
            android:gravity="left"
            android:layout_marginLeft="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desctxt"
            android:text="desc"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_below="@id/linearLayoutLabel"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/casetypetxt"
            android:layout_marginLeft="10dp"
            android:text="type"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/darkPurple"
            android:layout_below="@id/desctxt"
            android:background="@drawable/bg_casetype_label"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="left"/>

    </RelativeLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/legalpic2"
        android:scaleType="centerCrop">
    </ImageView>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/next_arrow_2"
        android:layout_gravity="center">
    </ImageView>
</FrameLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>