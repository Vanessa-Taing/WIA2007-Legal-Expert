<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lawyerUploadDoc">

    <View
        android:id="@+id/viewTop3"
        android:layout_width="457dp"
        android:layout_height="149dp"
        android:layout_marginEnd="-25dp"
        android:layout_marginBottom="650dp"
        android:background="@drawable/rounded_edges"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617"></View>

    <TextView
        android:id="@+id/txtTitleUpload"
        android:layout_width="374dp"
        android:layout_height="189dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Upload the approriate lawyer certification in order to get verified as a lawyer. Getting verified will enable the ability to officialy take on cases and operate as a registered lawyer in this application "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop3" />

    <TextView
        android:id="@+id/tvTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/relay_inter_medium"
        android:text="Upload certification"
        android:textColor="#eeeeee"
        android:textSize="28sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="269dp"
        android:layout_height="56dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="68dp"
        android:text="Upload PDF/JPG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop3" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="156dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpload" />

</androidx.constraintlayout.widget.ConstraintLayout>